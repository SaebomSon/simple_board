<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.newsp.mapper.GradeMapper">
	<!-- 등급 변경 조건에 맞는 user insert -->
	<insert id="insertGradeInfo">
		insert into grade(user_idx, type) values(#{userIdx}, #{type})
	</insert>
	<!-- 등급 변경 list 가져오기 -->
	<select id="getGradeList">
		select a.*, b.nickname from grade as a join user as b on a.user_idx=b.idx
	</select>
</mapper>